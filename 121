package helloword;

class Book{
	private String title;
	private int price;
	Book(){}
	Book(String title, int price){
		this.title = title;
		this.price = price;
	}
	String getTitle() {
		return title;
	}
	int getPrice(){
		return price;
	}
	void setTitle(String title) {
		this.title = title;
	}
	void setPrice(int price) {
		this.price = price;
	}
	void printBook() {
		System.out.println("title:"+title);
		System.out.println("price:"+price);
	}
}
public class Hellow{
	public static void main(String[] args) {
		Book bk = new Book();
		bk.printBook();
		bk.setPrice(27000);
		bk.setTitle("Java Programing");
		System.out.println("title:"+bk.getTitle());
		System.out.println("price:"+bk.getPrice());
	}
}


title:null
price:0
title:Java Programing
price:27000

